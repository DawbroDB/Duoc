from gtts import gTTS
import os 
import time
import random

parte = ["Pie Derecho", "Pie Izquierdo", "Mano Derecha", "Mano Izquierda"]
lugar = ["Rojo", "Verde", "Amarillo", "Azul"]


while True:
    parte_random = random.choice(parte)
    lugar_random = random.choice(lugar)
    texto = f"{parte_random} {lugar_random}"
    tts = gTTS(text=texto, lang = 'es')
    tts.save("texto.mp3")
    os.system("start texto.mp3")   
    time.sleep(6)